@page "/budget-planner"
@inject BudgetService Svc

<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Normal" Wrap="FlexWrap.Wrap">
	<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Right" Wrap="FlexWrap.Wrap">
		<RadzenLabel Text="Year:" />
		<RadzenDropDown @bind-Value=@selectedYear Data=@years />
	</RadzenStack>
	<BudgetGrid Data="@summaries" Type="BudgetType.Summary" />
	<BudgetGrid Data="@incomes" Type="BudgetType.Income" Categories="@incomeCategories" />
	<BudgetGrid Data="@expenses" Type="BudgetType.Expenses" Categories="@expenseCategories" />
	<BudgetGrid Data="@savings" Type="BudgetType.Savings" Categories="@savingCategories" />
</RadzenStack>

