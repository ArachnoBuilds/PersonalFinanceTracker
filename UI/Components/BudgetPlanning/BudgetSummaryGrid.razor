<RadzenDataGrid AllowColumnResize="true"
				Responsive="true"
				AllowAlternatingRows="true"
				TItem="Dictionary<ViewModels.Month, MonthlyBudgetSummary>"
				Data="@Data"
				Style="overflow:scroll">
	<Columns>
		@for (int i = 0; i < months.Length; i++)
		{
			var month = months[i];
			<RadzenDataGridColumn Width="50px"
								  Title="@month.ToString()"
								  Filterable="false"
								  Sortable="false"
								  TextAlign="TextAlign.Right">
				<Template Context="data">
					@if (data.TryGetValue(month, out var value))
					{
						@($"{value.Balance}")
					}
					else
					{
						@(" - ")
					}
				</Template>
			</RadzenDataGridColumn>
		}
	</Columns>
</RadzenDataGrid>

@code 
{
	[Parameter]
	public Dictionary<ViewModels.Month, MonthlyBudgetSummary> Summaries { get; set; } = [];

	ViewModels.Month[] months = Enum.GetValues<ViewModels.Month>();
	List<Dictionary<ViewModels.Month, MonthlyBudgetSummary>> Data => [Summaries];
}
