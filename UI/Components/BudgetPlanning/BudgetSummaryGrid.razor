<RadzenDataGrid AllowColumnResize="true"
				Responsive="true"
				AllowAlternatingRows="true"
				TItem="Dictionary<Header, MonthlyBudgetSummary>"
				Data="@Data"
				Style="overflow:scroll">
	<Columns>
		@for (int i = 0; i < headers.Length; i++)
		{
			var header = headers[i];
			<RadzenDataGridColumn Width="50px"
								  Title="@header.ToString()"
								  Filterable="false"
								  Sortable="false"
								  TextAlign="TextAlign.Right">
				<Template Context="data">
					@if (data.TryGetValue(header, out var value))
					{
						@($"{value.Balance}")
					}
					else
					{
						@(" - ")
					}
				</Template>
			</RadzenDataGridColumn>
		}
	</Columns>
</RadzenDataGrid>

@code 
{
	[Parameter]
	public Dictionary<Header, MonthlyBudgetSummary> Summaries { get; set; } = [];

	Header[] headers = Enum.GetValues<Header>();
	List<Dictionary<ViewModels.Header, MonthlyBudgetSummary>> Data => [Summaries];
}
