@using Application.Schema.Shared.Models
@using Components.Shared
@using Microsoft.Extensions.Logging
@page "/budget-planner"
@inherits StatefulComponent
@inject AppBudgetPlanning.GetBudget.IHandler GetBudgetHandler
@inject ILogger<Planner> Logger

<RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Normal" Wrap="FlexWrap.Wrap">
	<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
		<BudgetGrid Data="@summaries"
					Type="BudgetItemType.Summary" />
	</RadzenStack>
	<BudgetGrid @bind-Data="@incomes"
				Type="BudgetItemType.Income"
				RecalculateBudgetSummary="@RecalculateSummary" />
	<BudgetGrid @bind-Data="@expenses"
				Type="BudgetItemType.Expenses"
				RecalculateBudgetSummary="@RecalculateSummary" />
	<BudgetGrid @bind-Data="@savings"
				Type="BudgetItemType.Savings"
				RecalculateBudgetSummary="@RecalculateSummary" />
</RadzenStack>

