@using Application.Features.BudgetPlanning.GetBudget
@using Application.Features.BudgetPlanning.GetBudget.Models
@using Microsoft.Extensions.Logging
@page "/budget-planner"
@inject GetBudgetHandler GetBudgetHandler
@inject ILogger<Planner> Logger

<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Normal" Wrap="FlexWrap.Wrap">
	<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Right" Wrap="FlexWrap.Wrap">
		<RadzenLabel Text="Year:" />
		<RadzenDropDown @bind-Value=@selectedYear Data=@years />
	</RadzenStack>
	<BudgetGrid Data="@summaries" Type="BudgetType.Summary" />
	<BudgetGrid @bind-Data="@incomes"
				Type="BudgetType.Income"
				Categories="@incomeCategories"
				RecalculateBudgetSummary="@RecalculateSummary" />
	<BudgetGrid @bind-Data="@expenses"
				Type="BudgetType.Expenses"
				Categories="@expenseCategories"
				RecalculateBudgetSummary="@RecalculateSummary" />
	<BudgetGrid @bind-Data="@savings"
				Type="BudgetType.Savings"
				Categories="@savingCategories"
				RecalculateBudgetSummary="@RecalculateSummary" />
</RadzenStack>

